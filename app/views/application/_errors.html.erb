<% if @post.errors.any? %>
 <div>
   <h2><%= pluralize(@post.errors.count, 'error') %>
     prohibited this <%= resource_name(resource) %> from being saved:
   </h2>
   <ul>
     <% @post.errors.full_messages.each do |message| %>
       <li><%= message %></li>
     <% end %>
   </ul>
 </div>
<% end %>
