<p><%= link_to 'Back', posts_path %>
<p>
  <div class='container-fluid'>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong><br>
  <%= @post.text %>
</p>
<p>
  <strong>Tags:</strong><br>
  <%= @post.tags.join(', ') %>
</p>
<p>
  <strong>Author:</strong><br>
  <%= @post.user.email %>
</p>
<h2>Add comment</h2>
<%= render 'comments/form' %>

<h2>Comments</h2>
   <tbody>
     <%= render @post.comments %>
   </tbody>
