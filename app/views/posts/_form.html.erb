<%= link_to 'Back', posts_path %>
 <%= render 'errors', resource: @post %>
 <%= form_for @post do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.label :tags %>
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
